<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Change the color to your desired border color -->
        </shape>
    </item>
    <!-- Image (sticker) as content -->
    <item android:drawable="@drawable/default_image" /> <!-- Replace 'your_image' with your image resource -->
</layer-list>