<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="85dp">


    <ImageView
        android:id="@+id/image_view_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_view_remove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/cricle_white"
        android:padding="3dp"
        android:src="@drawable/btn_close"
        app:layout_constraintBottom_toTopOf="@+id/image_view_item"
        app:layout_constraintEnd_toEndOf="@+id/image_view_item"
        app:layout_constraintStart_toEndOf="@+id/image_view_item"
        app:layout_constraintTop_toTopOf="@+id/image_view_item" />
</androidx.constraintlayout.widget.ConstraintLayout>