<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_marginVertical="10dp"
    android:layout_marginEnd="5dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageViewItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:riv_corner_radius="3dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageViewRemove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/cricle_white"
        android:padding="3dp"
        android:src="@drawable/btn_close"
        app:layout_constraintBottom_toTopOf="@+id/imageViewItem"
        app:layout_constraintEnd_toEndOf="@+id/imageViewItem"
        app:layout_constraintStart_toEndOf="@+id/imageViewItem"
        app:layout_constraintTop_toTopOf="@+id/imageViewItem" />
</androidx.constraintlayout.widget.ConstraintLayout>