<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.material.MaterialThemeList">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintSaveControl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/img_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Select Collage Material"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnSaveEditing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClick"
            android:padding="8dp"
            android:src="@drawable/ic_done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSave"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#644AFF"
            android:gravity="center"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridView
        android:id="@+id/gridMaterial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/theme_gray_bg"
        android:gravity="center"
        android:numColumns="4"
        android:padding="10dp"
        tools:listitem="@layout/item_collage_material"
        android:stretchMode="columnWidth"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintSaveControl" />

</androidx.constraintlayout.widget.ConstraintLayout>